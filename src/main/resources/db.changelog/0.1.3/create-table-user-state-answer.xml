<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="v0-1-3-2" author="Some Author">
        <createTable tableName="user_state_answers">
            <column name="user_state_answer_chat_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="question_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="answer" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="v0-1-3-3" author="Some Author">
        <addPrimaryKey tableName="user_state_answers" columnNames="user_state_answer_chat_id, question_id" constraintName="pk_user_state_answers"/>
        <addForeignKeyConstraint baseTableName="user_state_answers"
                                 baseColumnNames="user_state_answer_chat_id"
                                 constraintName="fk_user_state_answers_user_state"
                                 referencedTableName="users"
                                 referencedColumnNames="chat_id"/>
    </changeSet>

</databaseChangeLog>